<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_set_password1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="设置手势密码1" />

        <Button
            android:id="@+id/bt_set_password2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="设置手势密码2" />

        <Button
            android:id="@+id/bt_set_password3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="设置手势密码3" />

        <Button
            android:id="@+id/bt_set_password4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="设置手势密码4" />

        <Button
            android:id="@+id/bt_input_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="验证手势密码" />

    </LinearLayout>

</layout>
